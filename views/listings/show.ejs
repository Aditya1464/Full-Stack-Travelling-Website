<% layout('/layouts/boilerplate') -%>

<body>

            <div class="row">
                <div class="col-8 offset-3">
                    <h4>Listing Details: </h4>
                </div>
            </div>

            <div class="card show-card">
                <div class="row">
                    <div class="col-6 offset-3">
                        <img src="<%=listing.image%>" class="card-img-top show-img" alt="image of <%= listing.title%>">
                    
                        <div class="card-body">
                            <b><%=listing.title%></b> </br>
                            <%= listing.description %> </br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> </br>
                            <%= listing.location %> </br>
                            <%= listing.country %> </br>
                        </div>

                    </div>
                </div>
        
            </div>

            <div style="display: flex; gap: 1rem;" class="col-1 offset-3">
                <a  class="btn btn-dark mb-3 ml-3 edit-btn" href="/listings/<%=listing._id%>/edit">Edit</a>
                <form style="display: block;" action="/listings/<%=listing._id%>?_method=DELETE" method="post" class="mb-3"> <button class="btn btn-dark ">Delete</button> </form>
            </div>
        
    
</body>
