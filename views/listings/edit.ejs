<% layout('/layouts/boilerplate') -%>

<body>

    <div class="row">
        <div class="col-8 offset-2">
            <h4 class="mt-3">Edit Your Listing</h4>

            <form action="/listings/<%=listing._id%>?_method=PUT" method="post" novalidate class="needs-validation">

                <div>
                    <label for="title" class="form-label"> Title: </label>
                        <input type="text" name="listings[title]" value="<%=listing.title%>"  class="form-control" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Valid Title.
                        </div>
                </div><br>
                
                <div>
                    <label for="description" class="form-label"> Description:</label>
                        <textarea name="listings[description]" class="form-control" required> "<%= listing.description%>" </textarea>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Short Description.
                        </div>
                </div><br>

                <div>
                    <label for="image" class="form-label"> Image URL/LINK:</label>
                        <input type="text" name="listings[image]" value="<%=listing.image%>" class="form-control">
                </div><br>

                <div class="row">
                    <div class="col-md-4">
                        <label for="price" class="form-label"> Price: </label>
                        <input type="number" name="listings[price]" value = <%=listing.price%> class="form-control" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Valid Price.
                        </div>
                    </div><br>
                    
                    <div class="col-md-8">
                        <label for="location" class="form-label"> Location: </label>
                        <input type="text" name="listings[location]" value="<%=listing.location%>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Valid Location.
                        </div>
                    </div><br>
                </div><br>
                
                <div>
                    <label for="country" class="form-label"> Country: </label>
                    <input type="text" name="listings[country]" value="<%=listing.country%>" class="form-control" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter Valid Country.
                    </div><br>
                </div>

                <button class="btn btn-dark edit-btn">Submit</button>

                <br><br>

            </form>
        </div>
    </div>

    
    
</body>
